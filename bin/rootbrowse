import os, sys
import time

def main(argv=None):
    os.close(0)
    import ROOT
    
    infiles=[ROOT.TFile.Open(name) for name in sys.argv[1:]]
    tbrowse=ROOT.TBrowser()
    
    try:
        while tbrowse:
            time.sleep(0.5)
    except KeyboardInterrupt,e:
        print ""

if __name__ == "__main__":
    sys.exit(main())
